{
  "private": true,
  "name": "@dcgw/bunny-patrol",
  "description": "TS rewrite of old game made for Pirate Kart 2012-in-one",
  "version": "0.0.0-development",
  "keywords": [
    "game",
    "typescript",
    "pirate-kart"
  ],
  "author": {
    "name": "George Weller",
    "email": "george.weller@gmail.com"
  },
  "contributors": [
    {
      "name": "Daniel Cassidy",
      "email": "mail@danielcassidy.me.uk",
      "url": "https://www.danielcassidy.me.uk/"
    }
  ],
  "homepage": "https://github.com/dcgw/bunny-patrol",
  "bugs": "https://github.com/dcgw/bunny-patrol",
  "repository": "git@github.com:dcgw/bunny-patrol.git",
  "license": "UNLICENSED",
  "scripts": {
    "build": "webpack --env.production",
    "fix": "tsc && eslint . --fix && prettier --write .",
    "lint": "tsc && eslint . && prettier --check .",
    "semantic-release": "semantic-release",
    "start": "webpack-dev-server --open",
    "test": "ava"
  },
  "dependencies": {
    "@types/domready": "1.0.0",
    "@types/webpack-env": "1.16.0",
    "domready": "1.0.8",
    "excalibur": "0.24.4",
    "tslib": "2.1.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "5.0.0",
    "@softwareventures/eslint-config": "3.4.2",
    "@softwareventures/prettier-config": "1.0.2",
    "@softwareventures/tslint-rules": "0.9.1",
    "@softwareventures/webpack-config": "3.0.1",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.20.0",
    "prettier": "2.2.1",
    "semantic-release": "17.3.9",
    "semantic-release-s3-upload": "0.2.80",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "typescript": "4.2.2",
    "webpack": "5.21.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build"
        }
      ],
      [
        "semantic-release-s3-upload",
        {
          "uploads": [
            {
              "src": {
                "dir": "./dist"
              },
              "dest": {
                "bucket": "bunny-patrol"
              }
            }
          ]
        }
      ]
    ]
  }
}
