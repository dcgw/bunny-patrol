{
  "private": true,
  "name": "@dcgw/bunny-patrol",
  "description": "TS rewrite of old game made for Pirate Kart 2012-in-one",
  "version": "0.0.0-development",
  "keywords": [
    "game",
    "typescript",
    "pirate-kart"
  ],
  "author": {
    "name": "George Weller",
    "email": "george.weller@gmail.com"
  },
  "contributors": [
    {
      "name": "Daniel Cassidy",
      "email": "mail@danielcassidy.me.uk",
      "url": "https://www.danielcassidy.me.uk/"
    }
  ],
  "homepage": "https://github.com/dcgw/bunny-patrol",
  "bugs": "https://github.com/dcgw/bunny-patrol",
  "repository": "git@github.com:dcgw/bunny-patrol.git",
  "license": "UNLICENSED",
  "scripts": {
    "build": "webpack --env.production",
    "semantic-release": "semantic-release",
    "start": "webpack-dev-server --open",
    "test": "tsc && tslint --project . && ava"
  },
  "dependencies": {
    "@types/domready": "1.0.0",
    "domready": "1.0.8",
    "excalibur": "0.24.3",
    "tslib": "2.0.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "5.0.0",
    "@softwareventures/tsconfig": "2.2.0",
    "@softwareventures/tslint-rules": "0.9.1",
    "@softwareventures/webpack-config": "0.20.13",
    "ava": "3.8.2",
    "cz-conventional-changelog": "3.2.0",
    "semantic-release": "17.0.7",
    "semantic-release-s3-upload": "0.2.77",
    "ts-loader": "7.0.4",
    "ts-node": "8.10.1",
    "tslint": "6.1.2",
    "typescript": "3.9.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build"
        }
      ],
      [
        "semantic-release-s3-upload",
        {
          "uploads": [
            {
              "src": {
                "dir": "./dist"
              },
              "dest": {
                "bucket": "bunny-patrol"
              }
            }
          ]
        }
      ]
    ]
  }
}
